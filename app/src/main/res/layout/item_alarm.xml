<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/ampmText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#DC0716"
        android:textStyle="bold"
        android:textSize="24sp"
        tools:text="오전"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/hourText"
        android:layout_marginTop="1.85dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#DC0716"
        android:textStyle="bold"
        android:textSize="24sp"
        tools:text="09"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ampmText"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/colonText"
        android:layout_marginTop="1.85dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#DC0716"
        android:textStyle="bold"
        android:textSize="24sp"
        tools:text=":"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hourText"/>

    <TextView
        android:id="@+id/minuteText"
        android:layout_marginTop="1.85dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#DC0716"
        android:textStyle="bold"
        android:textSize="24sp"
        tools:text="38"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/colonText"/>

    <TextView
        android:id="@+id/drug_text"
        android:layout_width="0dp"
        tools:text="아침 식전 알람"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ampmText"/>

    <android.widget.Button
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF"
        android:text="수정"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnDelete"
        android:layout_marginEnd="5dp"/>

    <android.widget.Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF"
        android:text="삭제"

        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
