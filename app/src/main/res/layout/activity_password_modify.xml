<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".password_modify_Activity">

    <LinearLayout
        android:id="@+id/linearLayoutprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FF0000"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호 변경"
            android:textStyle="bold"
            android:textSize="32sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:padding="8dp" />
    </LinearLayout>


    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutprofile"
        android:layout_marginTop="0dp"
        android:background="#E0E0E0"
        android:padding="8dp"
        android:text="회원설정"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="비밀번호"
        android:layout_marginStart="44dp"
        android:layout_marginTop="44dp"
        />

    <EditText
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edittext_background2"
        android:hint="변경하실 비밀번호를 입력해주세요."
        android:minHeight="48dp"
        android:padding="10dp"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="비밀번호 재확인"
        android:layout_marginStart="44dp"
        android:layout_marginTop="44dp"
        />
    <EditText
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edittext_background2"
        android:hint="변경하실 비밀번호를 다시 한번 입력해주세요."
        android:minHeight="48dp"
        android:padding="10dp"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:textStyle="bold" />



    <android.widget.Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:id="@+id/btn_change"
        android:layout_marginTop="350dp"
        android:background="@drawable/red_red"
        android:text="변경하기"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"
        />


</RelativeLayout>